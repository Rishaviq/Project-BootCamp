@using Office.Web.Models.WorkSpace
@model Office.Web.Models.WorkSpace.SpaceReservationListModel
@{
    ViewData["Title"] = "Create";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="display-4">Welcome</h1>
    </div>

    <h3 class="mb-3">Favorite Spaces</h3>
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Space Id</th>
                <th>Floor</th>
                <th>Zone</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var space in Model.favoriteSpaces)
            {
                <tr>
                    <td>@space.SpaceId</td>
                    <td>@space.SpaceLocationFloor</td>
                    <td>@space.SpaceLocationZone</td>
                    <td>
                        <a href="@Url.Action("ChooseDate", "Reservation", new { id = space.SpaceId })"
                           class="btn btn-primary">
                            Reserve
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <h3 class="mt-5 mb-3">All Spaces</h3>
    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Space Id</th>
                <th>Floor</th>
                <th>Zone</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var space in Model.Spaces)
            {
                <tr>
                    <td>@space.SpaceId</td>
                    <td>@space.SpaceLocationFloor</td>
                    <td>@space.SpaceLocationZone</td>
                    <td>
                        <a href="@Url.Action("ChooseDate", "Reservation", new { id = space.SpaceId })"
                           class="btn btn-primary">
                            Reserve
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>