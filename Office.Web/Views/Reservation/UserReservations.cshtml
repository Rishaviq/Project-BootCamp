@using Office.Web.Models.Reservation
@model ReservationListModel
@{
    ViewData["Title"] = "User Reservations";
}

<div class="container mt-5">
    <h2 class="mb-4">Your Reservations</h2>

    <table class="table table-bordered table-hover">
        <thead class="table-light">
            <tr>
                <th>Reservation ID</th>
                <th>User Name</th>
                <th>Space ID</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model.Reservations)
            {
                <tr>
                    <td>@reservation.Id</td>
                    <td>@reservation.UserName</td>
                    <td>@reservation.ReservedSpaceId</td>
                    <td>@reservation.ReservationDate.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        </tbody>
    </table>
</div>