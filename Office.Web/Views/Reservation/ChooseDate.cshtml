@model int
@{
    ViewData["Title"] = "ChooseDate";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Choose Reservation Date</h2>
                    <form method="post" asp-action="Create" asp-controller="Reservation">
                        <div class="mb-3">
                            <label for="date" class="form-label">Select Date</label>
                            <input name="date" id="date" type="date" class="form-control" required />
                            <input type="hidden" name="id" value="@Model" />
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary w-100">Submit</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>